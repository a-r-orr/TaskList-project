<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head', { title: 'New Project' }); %>
</head>

<body>
    <header>
        <%- include('./partials/navbar'); %>
    </header>

    <content>
        <div class="form-container">
            <div class="form-wrap tl-rounded">
                <h3 class="form-title">Add a New Task</h3>
                <form method="post" action="/new-task" class="task-form">
                    <div class="wrap-form-input">
                        <input type="text" name="taskName" placeholder="Task Name" class="form-input">
                    </div>
                    <div class="wrap-form-input">
                        <input type="text" name="taskDescription" placeholder="Task Description" class="form-input">
                    </div>
                    <div class="wrap-form-input">
                        <select name="priorityID" id="select-priority">
                            <% priorities.forEach((priority) => { %>
                                <option value="<%= priority.priority_id %>"><%= priority.priority_name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="wrap-form-input">
                        <input type="date" name="dueDate" value="<%= tomorrow %>" class="form-input">
                    </div>
                    <div class="wrap-form-input">
                        <input type="text" name="projectName" placeholder="<%= currentProject.project_name %>" class="form-input" disabled>
                    </div>

                    <button class="form-button">Add Task</button>
                </form>
            </div>
        </div>
    </content>
</body>

</html>